<% provide(:title, @category.name)%>
<div class="text-center">
  <h1 class="font-bold text-4xl mb-4"><%= @category.name %></h1>
  <%= link_to edit_category_path(@category), class: 'bg-slate-400 p-2 mr-1 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-300' do %>
    <i class="las la-edit"></i>Rename
  <% end %>
  <%= link_to @category, method: :delete, data: { confirm: "Are you sure you want to delete this category?" }, class: 'bg-slate-400 p-2 mr-1 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-500' do %>
    <i class="las la-trash-alt"></i>Delete
  <% end %>
  <%= link_to new_category_task_path(@category), class: 'bg-slate-400 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-500' do %>
    <i class="las la-plus"></i>Add Task
  <% end %>
</div>
<%= render 'shared/task_list' %>
