<li class="bg-slate-300 p-4 rounded-md w-64 h-64 m-auto hover:bg-slate-400">
  <div class="flex flex-col h-full justify-between">
    <%= link_to category, class: 'flex flex-col justify-between gap-5' do %>
      <h1 class="font-bold text-3xl h-16 break-words"><%= category.name %></h1>
      <div class="text-left mb-5 text-center mt-5">
        <p class="text-lg font-medium"><i class="las la-list mr-1"></i><%= count_not_completed_task(category)%> incomplete <%= "task".pluralize(count_not_completed_task(category)) %></p>
        <p class="text-lg font-medium"><i class="las la-check-square mr-1"></i><%= count_completed_task(category)%> completed <%= "task".pluralize(count_completed_task(category)) %></p>
      </div>
    <% end %>
    <%= link_to category, method: :delete, data: { confirm: 'Are you sure you want to delete this category?'} do %>
      <div class='bg-slate-500 text-center rounded-lg hover:bg-slate-600'>
        <i class="las la-trash-alt la-lg"></i>
      </div>
    <% end %>
  </div>
</li>
