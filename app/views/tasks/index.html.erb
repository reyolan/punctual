<div class="text-center mb-5">
  <h1 class= "font-bold text-4xl mb-4"> Welcome, <%= get_email_username(current_user.email) %>! </h1>
  <div>
    <%= link_to new_category_path, class: 'bg-slate-400 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-500 mr-2' do %>
      <i class="las la-plus"></i>Add Category 
    <% end %>
    <% if current_user.categories.count > 0 %>
      <%= link_to new_task_path, class: 'bg-slate-400 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-500' do %>
        <i class="las la-plus"></i>Add Task
      <% end %>
    <% end %>
  </div>
</div>
<%= render 'shared/task_list'%>
