<h1 class="font-bold text-4xl mb-4"><%= @task.name %></h1>
<%= link_to edit_task_path, class: 'bg-slate-400 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-300 w-full' do %>
  <i class="las la-edit"></i>Edit Task
<% end %>
<%= link_to @task, method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: 'bg-slate-400 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-300 w-full' do %>
  <i class="las la-trash-alt"></i>Delete Task
<% end %>
