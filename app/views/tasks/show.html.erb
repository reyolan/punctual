<% provide(:title, @task.name)%>
<div class="bg-slate-100 flex flex-col items-center justify-center gap-6 w-fit py-6 px-8 rounded-md m-auto">
  <h1 class="font-bold text-4xl"><%= @task.name %></h1>
  <div>
    <%= link_to edit_task_path, class: 'bg-slate-400 p-2 mr-2 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-300' do %>
      <i class="las la-edit"></i>Edit
    <% end %>
    <%= link_to @task, method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: 'bg-slate-400 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-300' do %>
      <i class="las la-trash-alt"></i>Delete
    <% end %>
  </div>
  <p class='w-full text-center <%= @task.completed ? 'bg-green-400' : 'bg-yellow-400' %> rounded-md p-4 text-2xl font-bold'><%= show_task_state(@task.completed) %></p>
  <div class='w-full'>
    <h2 class='font-bold text-3xl text-center'>Details</h2>
    <p class="bg-slate-300 p-4 rounded-md text-xl font-medium whitespace-pre-wrap <%= 'text-center' if @task.details.blank? %>"><%= show_task_details(@task.details) %></p>
  </div>
  <div class='w-full'>
    <h2 class='font-bold text-3xl text-center'>Deadline</h2>
    <p class="p-4 rounded-md text-2xl font-medium text-center <%= turn_to_red(@task.deadline, @task.completed) %>"><%= rephrase_deadline(@task.deadline)%></p>
  </div>
</div>
