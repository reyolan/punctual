<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield :title) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"%>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= vite_client_tag %>
    <%= vite_typescript_tag 'application',  'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <%= debug(params) if Rails.env.development? %>
    <div class="bg-slate-200 min-h-[calc(100%-64px)] p-4 ">
      <%= render "shared/flash" %>
      <%= yield %>
    </div>
  </body>
</html>
