<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'bg-slate-100 max-w-lg m-auto p-6 rounded-md mt-4'}) do |f| %>
  <h2 class="font-bold text-4xl mb-4 text-center">Login</h2>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded-md w-full' %>
  </div>
  <div class="mt-2">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'rounded-md w-full' %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="mt-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions mt-2">
    <%= f.submit "Log in", class: 'bg-slate-400 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-300 w-full' %>
  </div>
  <div class="text-center py-2">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sky-600 hover:underline" %>
    <hr class="border-black my-2">
    <p class="mt-2"> Already have an account? <span class="text-sky-600 hover:underline"> <%= link_to "Sign up", new_registration_path(resource_name) %></span></p>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'text-sky-600 hover:underline' %>
  </div>
<% end %>
