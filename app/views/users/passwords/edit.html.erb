<% provide(:title, 'Change Password')%>
<%= render "shared/error_msg", object: resource %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'bg-slate-100 max-w-lg m-auto p-6 rounded-md mt-4'} ) do |f| %>
  <h2 class="font-bold text-4xl mb-4 text-center">Change your password</h2>
  <%= f.hidden_field :reset_password_token %>
  <div>
    <%= f.label :password do %>
      New Password
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'rounded-md w-full' %>
  </div>
  <div class="mt-2">
    <%= f.label :password_confirmation, "Confirm new password" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded-md w-full' %>
  </div>
  <div class="actions">
    <%= f.submit "Change my password", class: 'bg-slate-400 p-2 rounded-md cursor-pointer font-medium text-lg hover:bg-slate-300 mt-4 w-full' %>
  </div>
<% end %>
